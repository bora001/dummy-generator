{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "ES2021", "ES2021.String", "esnext.string"],
    "typeRoots": ["src/@types", "./node_modules/@types"],
    "outDir": "./dist",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/@types/**/*.d.ts"]
}
